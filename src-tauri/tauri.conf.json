{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TK Tools",
  "version": "1.3.2",
  "identifier": "com.tkzc00.tk-tools-tauri",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TK工具箱",
        "width": 1000,
        "height": 700,
        "minWidth": 700,
        "minHeight": 500
      },
      {
        "label": "update",
        "title": "软件更新",
        "width": 500,
        "height": 400,
        "minWidth": 500,
        "minHeight": 400,
        "center": true,
        "visible": false,
        "url": "#/update"
      },
      {
        "label": "config",
        "title": "软件设置",
        "width": 700,
        "height": 500,
        "minWidth": 700,
        "minHeight": 500,
        "center": true,
        "visible": false,
        "url": "#/config"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "shortDescription": "TK工具箱",
    "longDescription": "TK常用工具集合",
    "targets": ["nsis", "app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU4RTc1QUJCQUNBQzNFQjUKUldTMVBxeXN1MXJuV085MHhhZVdzdWNaQjRHRkxLay9UZ2FjTGhJeVJQd3crdXl4Z2I5cWxGSXMK",
      "endpoints": [
        "https://github.com/zktkzc/tk-tools-tauri/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
